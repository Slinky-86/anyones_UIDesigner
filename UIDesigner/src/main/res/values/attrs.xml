<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- UIDesigner Custom Attributes -->
    <declare-styleable name="UIDesignerView">
        <attr name="designerTheme" format="enum">
            <enum name="vs_code_dark" value="0" />
            <enum name="vs_code_light" value="1" />
            <enum name="android_studio_dark" value="2" />
            <enum name="android_studio_light" value="3" />
        </attr>
        <attr name="showGrid" format="boolean" />
        <attr name="gridSize" format="dimension" />
        <attr name="snapToGrid" format="boolean" />
        <attr name="maxUndoSteps" format="integer" />
        <attr name="autoSave" format="boolean" />
        <attr name="showGuides" format="boolean" />
        <attr name="enableAnimations" format="boolean" />
        <attr name="componentIconSize" format="dimension" />
        <attr name="dragShadowEnabled" format="boolean" />
        <attr name="dropFeedbackEnabled" format="boolean" />
    </declare-styleable>
    
    <!-- Component Palette Attributes -->
    <declare-styleable name="ComponentPalette">
        <attr name="paletteBackground" format="color" />
        <attr name="categoryHeaderColor" format="color" />
        <attr name="componentItemColor" format="color" />
        <attr name="componentIconTint" format="color" />
        <attr name="searchBarStyle" format="reference" />
        <attr name="expandedByDefault" format="boolean" />
        <attr name="showComponentCount" format="boolean" />
        <attr name="showComponentIcons" format="boolean" />
        <attr name="iconSize" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="categorySpacing" format="dimension" />
        <attr name="componentSpacing" format="dimension" />
    </declare-styleable>
    
    <!-- Design Canvas Attributes -->
    <declare-styleable name="DesignCanvas">
        <attr name="canvasBackground" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="gridMajorColor" format="color" />
        <attr name="guideColor" format="color" />
        <attr name="guideSecondaryColor" format="color" />
        <attr name="selectionColor" format="color" />
        <attr name="selectionFillColor" format="color" />
        <attr name="handleColor" format="color" />
        <attr name="handleBorderColor" format="color" />
        <attr name="canvasWidth" format="dimension" />
        <attr name="canvasHeight" format="dimension" />
        <attr name="minZoom" format="float" />
        <attr name="maxZoom" format="float" />
        <attr name="zoomStep" format="float" />
        <attr name="gridPattern" format="reference" />
        <attr name="showRulers" format="boolean" />
        <attr name="rulerColor" format="color" />
        <attr name="dropZoneActiveColor" format="color" />
        <attr name="dropZoneInvalidColor" format="color" />
    </declare-styleable>
    
    <!-- Properties Panel Attributes -->
    <declare-styleable name="PropertiesPanel">
        <attr name="panelBackground" format="color" />
        <attr name="sectionHeaderColor" format="color" />
        <attr name="sectionHeaderBackground" format="color" />
        <attr name="propertyLabelColor" format="color" />
        <attr name="propertyValueColor" format="color" />
        <attr name="propertyInputBackground" format="color" />
        <attr name="propertyInputBorder" format="color" />
        <attr name="propertyInputFocus" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="expandedSections" format="string" />
        <attr name="showPropertyIcons" format="boolean" />
        <attr name="propertyIconSize" format="dimension" />
        <attr name="sectionSpacing" format="dimension" />
        <attr name="propertySpacing" format="dimension" />
    </declare-styleable>
    
    <!-- Component Hierarchy Attributes -->
    <declare-styleable name="ComponentHierarchy">
        <attr name="hierarchyBackground" format="color" />
        <attr name="treeLineColor" format="color" />
        <attr name="selectedItemColor" format="color" />
        <attr name="hoverItemColor" format="color" />
        <attr name="lockedItemColor" format="color" />
        <attr name="hiddenItemColor" format="color" />
        <attr name="expandIconColor" format="color" />
        <attr name="componentIconColor" format="color" />
        <attr name="indentSize" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="showTreeLines" format="boolean" />
        <attr name="showComponentIcons" format="boolean" />
        <attr name="showComponentTypes" format="boolean" />
        <attr name="enableDragReorder" format="boolean" />
    </declare-styleable>
    
    <!-- Toolbar Attributes -->
    <declare-styleable name="UIDesignerToolbar">
        <attr name="toolbarBackground" format="color" />
        <attr name="toolbarTextColor" format="color" />
        <attr name="toolbarIconColor" format="color" />
        <attr name="toolbarButtonHover" format="color" />
        <attr name="toolbarButtonPressed" format="color" />
        <attr name="toolbarButtonDisabled" format="color" />
        <attr name="separatorColor" format="color" />
        <attr name="buttonStyle" format="reference" />
        <attr name="iconButtonStyle" format="reference" />
        <attr name="showLabels" format="boolean" />
        <attr name="buttonSize" format="dimension" />
        <attr name="buttonSpacing" format="dimension" />
        <attr name="separatorWidth" format="dimension" />
    </declare-styleable>
    
    <!-- Component Renderer Attributes -->
    <declare-styleable name="ComponentRenderer">
        <attr name="selectionBorderColor" format="color" />
        <attr name="selectionBorderWidth" format="dimension" />
        <attr name="selectionCornerRadius" format="dimension" />
        <attr name="resizeHandleColor" format="color" />
        <attr name="resizeHandleSize" format="dimension" />
        <attr name="resizeHandleTouchSize" format="dimension" />
        <attr name="componentOverlayColor" format="color" />
        <attr name="componentShadowColor" format="color" />
        <attr name="componentShadowRadius" format="dimension" />
        <attr name="componentShadowOffset" format="dimension" />
        <attr name="showComponentBounds" format="boolean" />
        <attr name="showComponentLabels" format="boolean" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelTextColor" format="color" />
        <attr name="labelBackground" format="color" />
    </declare-styleable>
    
    <!-- Drag and Drop Attributes -->
    <declare-styleable name="DragDropSystem">
        <attr name="dragShadowDrawable" format="reference" />
        <attr name="dragShadowColor" format="color" />
        <attr name="dragShadowElevation" format="dimension" />
        <attr name="dragShadowCornerRadius" format="dimension" />
        <attr name="dropTargetActiveDrawable" format="reference" />
        <attr name="dropTargetInactiveDrawable" format="reference" />
        <attr name="dropTargetInvalidDrawable" format="reference" />
        <attr name="dropFeedbackSuccessColor" format="color" />
        <attr name="dropFeedbackErrorColor" format="color" />
        <attr name="dropFeedbackSize" format="dimension" />
        <attr name="dropZonePadding" format="dimension" />
        <attr name="enableDropPreview" format="boolean" />
        <attr name="enableDropAnimation" format="boolean" />
        <attr name="dropAnimationDuration" format="integer" />
    </declare-styleable>
    
    <!-- Animation Attributes -->
    <declare-styleable name="UIDesignerAnimation">
        <attr name="animationDuration" format="integer" />
        <attr name="animationInterpolator" format="enum">
            <enum name="linear" value="0" />
            <enum name="accelerate" value="1" />
            <enum name="decelerate" value="2" />
            <enum name="accelerate_decelerate" value="3" />
            <enum name="bounce" value="4" />
            <enum name="overshoot" value="5" />
            <enum name="anticipate" value="6" />
            <enum name="anticipate_overshoot" value="7" />
        </attr>
        <attr name="enableTransitions" format="boolean" />
        <attr name="enableMicroAnimations" format="boolean" />
        <attr name="enableSelectionAnimations" format="boolean" />
        <attr name="enableDragAnimations" format="boolean" />
        <attr name="fadeInDuration" format="integer" />
        <attr name="fadeOutDuration" format="integer" />
        <attr name="scaleAnimationDuration" format="integer" />
        <attr name="slideAnimationDuration" format="integer" />
    </declare-styleable>
    
    <!-- Color Picker Attributes -->
    <declare-styleable name="ColorPicker">
        <attr name="colorWheelSize" format="dimension" />
        <attr name="colorPreviewSize" format="dimension" />
        <attr name="showAlphaSlider" format="boolean" />
        <attr name="showHexInput" format="boolean" />
        <attr name="showColorPalette" format="boolean" />
        <attr name="colorPalette" format="reference" />
        <attr name="recentColorsCount" format="integer" />
        <attr name="wheelStrokeWidth" format="dimension" />
        <attr name="wheelPointerRadius" format="dimension" />
        <attr name="sliderHeight" format="dimension" />
        <attr name="sliderCornerRadius" format="dimension" />
    </declare-styleable>
    
    <!-- Layout Constraint Attributes -->
    <declare-styleable name="ConstraintEditor">
        <attr name="constraintLineColor" format="color" />
        <attr name="constraintActiveColor" format="color" />
        <attr name="constraintHandleColor" format="color" />
        <attr name="constraintHandleSize" format="dimension" />
        <attr name="showConstraintLabels" format="boolean" />
        <attr name="constraintLabelTextSize" format="dimension" />
        <attr name="constraintLabelTextColor" format="color" />
        <attr name="constraintLabelBackground" format="color" />
        <attr name="constraintLineWidth" format="dimension" />
        <attr name="constraintDashWidth" format="dimension" />
        <attr name="constraintDashGap" format="dimension" />
        <attr name="enableConstraintAnimation" format="boolean" />
    </declare-styleable>
    
    <!-- Resource Manager Attributes -->
    <declare-styleable name="ResourceManager">
        <attr name="resourceItemBackground" format="color" />
        <attr name="resourceCategoryColor" format="color" />
        <attr name="resourcePreviewSize" format="dimension" />
        <attr name="showResourcePreviews" format="boolean" />
        <attr name="groupByType" format="boolean" />
        <attr name="showResourcePath" format="boolean" />
        <attr name="resourceIconSize" format="dimension" />
        <attr name="resourceItemHeight" format="dimension" />
        <attr name="resourceItemPadding" format="dimension" />
        <attr name="categoryHeaderHeight" format="dimension" />
        <attr name="enableResourceSearch" format="boolean" />
    </declare-styleable>
    
    <!-- Performance Monitor Attributes -->
    <declare-styleable name="PerformanceMonitor">
        <attr name="showFpsCounter" format="boolean" />
        <attr name="showMemoryUsage" format="boolean" />
        <attr name="showRenderTime" format="boolean" />
        <attr name="showComponentCount" format="boolean" />
        <attr name="monitorBackground" format="color" />
        <attr name="monitorTextColor" format="color" />
        <attr name="monitorPosition" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_right" value="1" />
            <enum name="bottom_left" value="2" />
            <enum name="bottom_right" value="3" />
        </attr>
        <attr name="warningThreshold" format="integer" />
        <attr name="errorThreshold" format="integer" />
        <attr name="updateInterval" format="integer" />
    </declare-styleable>
    
    <!-- Component Category Attributes -->
    <declare-styleable name="ComponentCategory">
        <attr name="categoryIcon" format="reference" />
        <attr name="categoryColor" format="color" />
        <attr name="categoryName" format="string" />
        <attr name="categoryDescription" format="string" />
        <attr name="isExpanded" format="boolean" />
        <attr name="componentCount" format="integer" />
        <attr name="showComponentCount" format="boolean" />
        <attr name="headerHeight" format="dimension" />
        <attr name="headerPadding" format="dimension" />
        <attr name="expandIconSize" format="dimension" />
    </declare-styleable>
    
    <!-- Component Item Attributes -->
    <declare-styleable name="ComponentItem">
        <attr name="componentType" format="enum">
            <enum name="textview" value="0" />
            <enum name="button" value="1" />
            <enum name="imageview" value="2" />
            <enum name="edittext" value="3" />
            <enum name="checkbox" value="4" />
            <enum name="radiobutton" value="5" />
            <enum name="switch" value="6" />
            <enum name="seekbar" value="7" />
            <enum name="spinner" value="8" />
            <enum name="linear_layout" value="9" />
            <enum name="relative_layout" value="10" />
            <enum name="constraint_layout" value="11" />
            <enum name="frame_layout" value="12" />
            <enum name="scroll_view" value="13" />
            <enum name="card_view" value="14" />
            <enum name="recycler_view" value="15" />
            <enum name="list_view" value="16" />
            <enum name="grid_view" value="17" />
            <enum name="tab_layout" value="18" />
            <enum name="bottom_navigation" value="19" />
            <enum name="floating_action_button" value="20" />
            <enum name="toolbar" value="21" />
            <enum name="web_view" value="22" />
            <enum name="progress_bar" value="23" />
            <enum name="custom_view" value="24" />
        </attr>
        <attr name="componentIcon" format="reference" />
        <attr name="componentName" format="string" />
        <attr name="componentDescription" format="string" />
        <attr name="isDraggable" format="boolean" />
        <attr name="isEnabled" format="boolean" />
        <attr name="showDescription" format="boolean" />
        <attr name="itemBackground" format="color" />
        <attr name="itemHoverColor" format="color" />
        <attr name="itemSelectedColor" format="color" />
    </declare-styleable>
    
    <!-- Status Bar Attributes -->
    <declare-styleable name="StatusBar">
        <attr name="statusBackground" format="color" />
        <attr name="statusTextColor" format="color" />
        <attr name="statusHeight" format="dimension" />
        <attr name="statusPadding" format="dimension" />
        <attr name="showComponentCount" format="boolean" />
        <attr name="showZoomLevel" format="boolean" />
        <attr name="showCanvasSize" format="boolean" />
        <attr name="showMemoryUsage" format="boolean" />
        <attr name="statusIconSize" format="dimension" />
        <attr name="statusTextSize" format="dimension" />
    </declare-styleable>
    
    <!-- Theme Attributes -->
    <declare-styleable name="UIDesignerTheme">
        <attr name="primaryColor" format="color" />
        <attr name="primaryVariantColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="secondaryVariantColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="surfaceColor" format="color" />
        <attr name="errorColor" format="color" />
        <attr name="onPrimaryColor" format="color" />
        <attr name="onSecondaryColor" format="color" />
        <attr name="onBackgroundColor" format="color" />
        <attr name="onSurfaceColor" format="color" />
        <attr name="onErrorColor" format="color" />
        <attr name="isDarkTheme" format="boolean" />
    </declare-styleable>
</resources>
