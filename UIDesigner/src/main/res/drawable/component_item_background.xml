<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/component_pressed" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/component_hover" />
            <corners android:radius="@dimen/card_corner_radius" />
            <stroke android:width="@dimen/focus_border_width" android:color="@color/focus" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/component_hover" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/component_selected" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/component_background" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
</selector>
