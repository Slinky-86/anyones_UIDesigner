<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/property_input_background" />
            <corners android:radius="@dimen/text_field_corner_radius" />
            <stroke android:width="@dimen/stroke_width_focused" android:color="@color/property_input_focus" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabled" />
            <corners android:radius="@dimen/text_field_corner_radius" />
            <stroke android:width="@dimen/stroke_width" android:color="@color/component_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/property_input_background" />
            <corners android:radius="@dimen/text_field_corner_radius" />
            <stroke android:width="@dimen/stroke_width" android:color="@color/property_input_border" />
        </shape>
    </item>
</selector>
